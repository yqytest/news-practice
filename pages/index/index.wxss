/**index.wxss**/
/**最上面的标签页（新闻类别）**/
.category-list {
  margin-top: 140rpx;
  display: flex;
  align-items: center;
  background-color: #2795d4;
  color: #fff;
  z-index: 9999;
}
.category-item {
  position: relative;
  padding-top: 10rpx;
  padding-bottom: 20rpx;
  width: 106rpx;
  display: flex;
  flex-shrink: 0;
  flex-direction: column;
  align-items: center;
  text-align: center;
  font-size: 32rpx;
}
.category-line {
  position: absolute;
  width: 30rpx;
  height: 6rpx;
  bottom: 12rpx;
}
/**类别被选中的下划线效果**/
.category-item.active {
  font-weight: bold;
}
.category-item.active .category-line {
  background-color: #84cef8;
}

/**热门新闻**/
.hot-scroll {
  height: 400rpx;
  background-image: #eee;
}
.hot-list {
  background-image: #eee;
}
.hot-item {
  position: relative;
  margin: 10px;
  height: 370rpx;
  border-radius: 15rpx;
  overflow: hidden;
  border: 1rpx solid #eee;
}
.hot-title-wrapper {
  position: absolute;
  bottom: 0rpx;
  padding-top:20rpx;
  background: linear-gradient( 0deg, rgba(1, 1, 1, 0.7) 0%,rgba(1, 1, 1, 0) 100%);
}
.hot-title {
  font-size: 34rpx;
  margin-left: 20rpx;
  color: #fff;
}
.hot-info {
  display: flex;
  font-size: 25rpx;
  color: #adadad;
  padding-bottom: 8rpx; 
}
.hot-source {
  margin-left: 20rpx;
}
.hot-date {
  margin-left: 20rpx;
}
.hot-photo {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.hot-label {
  position: absolute;
  width: 100rpx;
  height: 50rpx;
  right: 0;
  top: 0;
  background-color: rgba(255,0,0,0.3);
  font-size: 28rpx;
  border-radius: 0 0 0 40%;
  color: #fff;
  text-align: center;
  padding: 4rpx 0 0 4rpx;
  letter-spacing: 1rpx 
}

/**新闻列表**/
.news-list {
  margin-top: 20rpx; 
}
.news-item {
  display: flex;
  align-items: center;
  border-top: 1rpx solid #eeeeee;
}
.news-title-wrapper {
  flex-grow: 1;
}
.news-title {
  margin-left:20rpx; 
  font-size:32rpx;
  line-height: 44rpx;
  height: 90rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.news-info {
  margin-left:20rpx; 
  margin-top: 10rpx;
  display: flex;
  font-size:25rpx;
  color: #999
}
.news-source {
}
.news-date {
  margin-left:20rpx; 
}
.photo-wrapper {
  margin: 20rpx 20rpx;
  width: 200rpx;
  height: 150rpx;
}
.news-photo {
  width: 200rpx;
  height: 150rpx;
  border: 1rpx solid #f3f3f3;
}